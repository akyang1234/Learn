<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.winson.learn.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/projectList"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目1"
        android:id="@+id/btn1"
        android:onClick="goToActivity"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目2"
        android:id="@+id/btn2"
        android:onClick="goToActivity"
        android:layout_above="@+id/btn5"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目3"
        android:id="@+id/btn3"
        android:onClick="goToActivity"
        android:layout_above="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目4"
        android:id="@+id/btn4"
        android:onClick="goToActivity"
        android:layout_alignTop="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目5"
        android:id="@+id/btn5"
        android:onClick="goToActivity"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />
</RelativeLayout>
